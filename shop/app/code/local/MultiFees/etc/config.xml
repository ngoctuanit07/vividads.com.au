<config>
    <modules>
        <MageWorx_MultiFees>
            <version>2.2.4</version>
        </MageWorx_MultiFees>
    </modules>
    
    <frontend>
        <translate>
            <modules>
                <MageWorx_MultiFees>
                    <files>
                        <default>MageWorx_MultiFees.csv</default>
                    </files>
                </MageWorx_MultiFees>
            </modules>
        </translate>
        <routers>
            <multifees>
                <use>standard</use>
                <args>
                    <module>MageWorx_MultiFees</module>
                    <frontName>multifees</frontName>
                </args>
            </multifees>
        </routers>
        <layout>
            <updates>
                <multifees>
                    <file>multifees.xml</file>
                </multifees>
            </updates>
        </layout>
        <events>
            <checkout_cart_save_before>
                <observers>
                    <multifees>
                        <class>multifees/observer</class>
                        <method>cartSaveBefore</method>
                    </multifees>
                </observers>
            </checkout_cart_save_before>
            <core_block_abstract_to_html_after>
                <observers>
                    <multifees>
                        <class>multifees/observer</class>
                        <method>toHtmlBlockFrontBefore</method>
                    </multifees>
                </observers>
            </core_block_abstract_to_html_after>
            <sales_quote_address_save_before>
                <observers>
                    <multifees>
                        <class>multifees/observer</class>
                        <method>addressSaveBefore</method>
                    </multifees>
                </observers>
            </sales_quote_address_save_before>            
        </events>
    </frontend>
    
    <global>
        <models>
            <multifees>
                <class>MageWorx_MultiFees_Model</class>
                <resourceModel>multifees_mysql4</resourceModel>
            </multifees>
            <multifees_mysql4>
                <class>MageWorx_MultiFees_Model_Mysql4</class>
                <entities>
                    <fee>
                        <table>multifees_fee</table>
                    </fee>
                    <store>
                        <table>multifees_fee_store</table>
                    </store>
                    <language_fee>
                        <table>multifees_fee_language</table>
                    </language_fee>
                    <option>
                        <table>multifees_fee_option</table>
                    </option>
                    <language_option>
                        <table>multifees_fee_option_language</table>
                    </language_option>
                </entities>
            </multifees_mysql4>
        </models>
        <resources>
            <multifees_setup>
                <setup>
                    <module>MageWorx_MultiFees</module>
                    <class>MageWorx_MultiFees_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </multifees_setup>
            <multifees_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </multifees_write>
            <multifees_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </multifees_read>
        </resources>
        <blocks>
            <multifees>
                <class>MageWorx_MultiFees_Block</class>
            </multifees>
        </blocks>
        <helpers>
            <multifees>
                <class>MageWorx_MultiFees_Helper</class>
            </multifees>
        </helpers>
        <sales>
            <quote>
                <totals>
                    <multifees>
                        <class>multifees/sales_quote_total</class>
                        <after>subtotal,discount,tax,shipping</after>
                        <before>grand_total</before>
                        <renderer>multifees/checkout_total</renderer>
<!--                        <admin_renderer>adminhtml/sales_order_create_totals_tax</admin_renderer>-->
                    </multifees>
                    <tax_multifees>
                        <class>multifees/sales_quote_tax</class>
                        <after>multifees</after>
                        <before>grand_total</before>
                        <renderer>multifees/checkout_total</renderer>
<!--                        <admin_renderer>adminhtml/sales_order_create_totals_tax</admin_renderer>-->
                    </tax_multifees>
                </totals>
            </quote>
           <order_invoice>
                <totals>
                    <multifees>
                        <class>multifees/sales_order_invoice_total</class>
                    </multifees>
                </totals>
            </order_invoice> 
            <order_creditmemo>
                <totals>
                    <multifees>
                        <class>multifees/sales_order_creditmemo_total</class>
                    </multifees>
                </totals>
            </order_creditmemo>
        </sales>
        <pdf>
            <totals>
                <multifees>
                    <model>multifees/sales_pdf_total</model>
                </multifees>
            </totals>
        </pdf>
        
        <fieldsets>
            <sales_convert_quote_address>
                <multifees_amount>
                    <to_order>*</to_order>
                </multifees_amount>
                <base_multifees_amount>
                    <to_order>*</to_order>
                </base_multifees_amount>
                <multifees_tax_amount>
                    <to_order>*</to_order>
                </multifees_tax_amount>
                <base_multifees_tax_amount>
                    <to_order>*</to_order>
                </base_multifees_tax_amount>
                <details_multifees>
                    <to_order>*</to_order>
                </details_multifees>
            </sales_convert_quote_address>
            <sales_convert_order>
                <multifees_amount>
                    <to_invoice>*</to_invoice>
                    <to_cm>*</to_cm>
                </multifees_amount>
                <base_multifees_amount>
                    <to_invoice>*</to_invoice>
                    <to_cm>*</to_cm>
                </base_multifees_amount>
                <multifees_tax_amount>
                    <to_invoice>*</to_invoice>
                    <to_cm>*</to_cm>
                </multifees_tax_amount>
                <base_multifees_tax_amount>
                    <to_invoice>*</to_invoice>
                    <to_cm>*</to_cm>
                </base_multifees_tax_amount>
                <details_multifees>
                    <to_invoice>*</to_invoice>
                    <to_cm>*</to_cm>
                </details_multifees>
            </sales_convert_order>            
        </fieldsets>
        <events>
            <sales_quote_collect_totals_after>
                <observers>
                    <multifees>
                        <class>multifees/observer</class>
                        <method>quoteCollectTotalsAfter</method>
                    </multifees>
                </observers>
            </sales_quote_collect_totals_after>
            <sales_convert_order_to_quote>
                <observers>
                    <multifees>
                        <class>multifees/observer</class>
                        <method>convertOrderToQuote</method>
                    </multifees>
                </observers>
            </sales_convert_order_to_quote>
            <paypal_prepare_line_items>
                <observers>
                    <multifees>
                        <class>multifees/observer</class>
                        <method>paypalCart</method>
                    </multifees>
                </observers>
            </paypal_prepare_line_items>
            <sales_order_place_after>
                <observers>
                    <multifees>
                        <class>multifees/observer</class>
                        <method>placeOrderAfter</method>
                    </multifees>
                </observers>
            </sales_order_place_after>
            <order_cancel_after>
                <observers>
                    <multifees>
                        <class>multifees/observer</class>
                        <method>cancelOrderAfter</method>
                    </multifees>
                </observers>
            </order_cancel_after>
            <sales_order_invoice_save_after>
                <observers>
                    <multifees>
                        <class>multifees/observer</class>
                        <method>orderInvoiceSaveAfter</method>
                    </multifees>
                </observers>
            </sales_order_invoice_save_after>
            <sales_order_creditmemo_save_after>
                <observers>
                    <multifees>
                        <class>multifees/observer</class>
                        <method>orderCreditmemoSaveAfter</method>
                    </multifees>
                </observers>
            </sales_order_creditmemo_save_after>
        </events>
    </global>
    
    <adminhtml>
        <events>
            <adminhtml_sales_order_create_process_data>
                <observers>
                    <multifees>
                        <class>multifees/observer</class>
                        <method>order–°reateProcessData</method>
                    </multifees>
                </observers>
            </adminhtml_sales_order_create_process_data>
            <core_block_abstract_to_html_after>
                <observers>
                    <multifees>
                        <class>multifees/observer</class>
                        <method>toHtmlBlockAdminBefore</method>
                    </multifees>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
        <menu>
            <sales>
                <children>
                    <multifees translate="title" module="multifees">
                        <title>Multi Fees</title>
                        <sort_order>100</sort_order>
                        <action>mageworx/multifees_fee/</action>
                        <depends>
                            <config>mageworx_sales/multifees/enabled</config>
                        </depends>
                    </multifees>
                </children>
            </sales>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <sales>
                            <children>
                                <multifees translate="title" module="multifees">
                                    <title>Multi Fees</title>
                                </multifees>
                            </children>
                        </sales>                        
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <mageworx_sales translate="title" module="mageworx">
                                            <title>MageWorx &gt; Sales</title>
                                            <sort_order>1</sort_order>
                                            <children>
                                                <multifees translate="title" module="multifees">
                                                    <title>Multi Fees</title>
                                                </multifees>
                                            </children>
                                        </mageworx_sales>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <multifees>
                    <file>multifees.xml</file>
                </multifees>
            </updates>
        </layout>
    </adminhtml>
    
    <default>
        <sales>
            <totals_sort>
                <multifees>60</multifees>
            </totals_sort>
        </sales>
        <mageworx_sales>
            <multifees>
                <enabled>1</enabled>
                <images_thumbnails_size>70</images_thumbnails_size>
                <position_in_cart>0</position_in_cart>
                <tax_calculation_includes_tax>0</tax_calculation_includes_tax>
                <display_tax_in_block>1</display_tax_in_block>
                <display_tax_in_cart>1</display_tax_in_cart>
                <display_tax_in_sales>1</display_tax_in_sales>                
                <enable_cart>0</enable_cart>
                <static_block_for_cart_page></static_block_for_cart_page>                
                <enable_payment>0</enable_payment>
                <enable_shipping>0</enable_shipping>
            </multifees>
        </mageworx_sales>
    </default>
</config>