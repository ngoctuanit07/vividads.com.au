<?xml version="1.0"?>
<layout version="0.1.0">
    <catalog_product_view>	
    	<reference name="head">
			<action method="addItem"><type>skin_css</type><name>css/phoneorder.css</name></action>
    	</reference>
		<reference name="content">
        	<block type="phoneorder/centerblock" name="phoneorder.center" as="phoneorder_center" after="product.info.options.wrapper.bottom" template="phoneorder/form_content.phtml"/>		
		</reference>
		<reference name="right">
        	<block type="phoneorder/rightblock" name="phoneorder.right" as="phoneorder_right" before="-" template="phoneorder/form_right.phtml"/>		
		</reference>		
    </catalog_product_view>
</layout>