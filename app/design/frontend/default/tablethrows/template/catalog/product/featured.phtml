/**
 * Product list template
 *
 * @see Mage_Catalog_Block_Product_List
 */
?>
<?php
    $_productCollection=$this->getLoadedProductCollection();
    $_helper = $this->helper('catalog/output');
?>
<?php if(!$_productCollection->count()): ?>

<p class="note-msg"><?php echo $this->__('There are no products matching the selection.') ?></p>
<?php else: ?>
<div class="row-featured-products">
  <h1><?php echo $this->__('Featured Products')?></h1>
  <?php //echo $this->getToolbarHtml() ?>
  <?php // List mode ?>
  <?php if($this->getMode()!='grid'): ?>
  <?php $_iterator = 0; ?>
  <ul>
    <?php foreach ($_productCollection as $_product): ?>
    <li>
      <div class="proimg"> <a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(258,197); ?>" width="258" height="197"  alt="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" /></a>
        <p><?php echo substr($_helper->productAttribute($_product, $_product->getName() , 'name'),0,25); ?>...</p>
        <span><a href="<?php echo $_product->getProductUrl() ?>" ><img src="<?php echo $this->getSkinUrl()?>images/zoomer_mg.jpg" style="border:none 0px;" /></a></span> </div>
    </li>
    <?php endforeach; ?>
  </ul>
  <?php endif; ?>
</div>
<?php endif; ?>
