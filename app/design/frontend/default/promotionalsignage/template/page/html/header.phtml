/**
 * @var Mage_Page_Block_Html_Header $this
 */
$defaultTitle = "Outdoor Sign Supplier Australia";
$pageTitle = "";
$type = $this->getType();
$title = $this->getH1Title();
//var_dump($title);
if (isset($type) && !empty($type)) {
    if ($type == "category") {
        if (!empty($title)) {
            $pageTitle = $title . " Outdoor Signage Supplier";
        } else {
            $title = $defaultTitle;
        }
    }
    if ($type == "gallery") {
        if (!empty($title)) {
            $pageTitle = $title;
        } else {
            $title = $defaultTitle;
        }
    }
}
?>
<div class="header-container">
    <div class="header">        
        <h1 class="logo">
            <?php echo $pageTitle; ?>                
        </h1>        
    </div>
</div>