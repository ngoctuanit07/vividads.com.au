                    $tab_title = Mage::getStoreConfig('easy_tabs/customcms/tabnamecms'.$tab_is_custom_id);
                }
		$arr_buttons_name[]=$tab_title;
	   }
	}
	
	$tot_items=count($arr_buttons_name);
    ?>

