<?php if ($_order): ?>
<table cellspacing="0" cellpadding="0" border="0" width="100%" >
    <thead style="height:30px !important; line-height:30px;">
        <tr style="border-width:1px; border-style:solid; border-color:#DADADA !important; background-color:#EAEAEA !important;">
            <th style="border-right:1px solid #DADADA !important; text-align:left; padding-left:10px;"><?php echo $this->__('Item') ?></th>
