            <th align="center" style="border-right:1px solid #DADADA !important;"><?php echo $this->__('SKU') ?></th>
            <th align="center" style="text-align:center; border-right:1px solid #DADADA !important;"><?php echo $this->__('Price') ?></th>
            <th align="center" style="text-align:center; border-right:1px solid #DADADA !important;"><?php echo $this->__('Qty') ?></th>
