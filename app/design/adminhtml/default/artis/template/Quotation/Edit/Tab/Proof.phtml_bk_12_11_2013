		  {
                   $sqlProofsSystem="SELECT *,DATE_FORMAT(postdate,'%D %M, %Y') AS p_date,DATE_FORMAT(approve_date,'%D %M, %Y') AS a_date FROM ".$tableName."  WHERE  order_id = '".$quote_id."' AND proof_type= 'quote' ORDER BY entity_id DESC";
