<script type="text/javascript">
    function set_custom_price()
    {
	if(document.getElementById('custom_price').style.display == 'none')
	document.getElementById('custom_price').style.display = 'block';
	else
	document.getElementById('custom_price').style.display = 'none';
    }
</script>

