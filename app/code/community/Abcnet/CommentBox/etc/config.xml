nnection>			</commentbox_write>			<commentbox_read>				<connection>					<use>core_read</use>				</connection>			</commentbox_read>		</resources>	</global>	<admin>		<routers>			<commentboxadmin>				<use>admin</use>				<args>					<module>Abcnet_CommentBox</module>					<frontName>commentboxadmin</frontName>				</args>			</commentboxadmin>		</routers>	</admin>	<!--<adminhtml>		<layout>			<updates>				<adminhtml>					<file>commentbox.xml</file>				</adminhtml>			</updates>		</layout>	</adminhtml>-->	<default>		<commentbox>			<enable>				<html>1</html>			</enable>		</commentbox>	</default></config>