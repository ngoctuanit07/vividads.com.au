<?xml version="1.0"?>
<application>
	<amazons3>
		<label>Amazon S3</label>
		<settings>
			<accessKey>
				<label>Access Key</label>
				<type>text</type>
				<required>1</required>
				<note>Your Amazon S3 Access Key</note>
			</accessKey>
			<secretKey>
				<label>Secret Key</label>
				<type>text</type>
				<required>1</required>
				<note>Your Amazon S3 Secret Key</note>
			</secretKey>
			<bucketPath>
				<label>Bucket Path</label>
				<type>text</type>
				<required>1</required>
				<note>Location of the bucket</note>
			</bucketPath>
			<appPath>
				<label>Bucket Directory</label>
				<type>text</type>
				<required>1</required>
			</appPath>
			<connTimeOut>
				<label>Connection Timeout</label>
				<type>text</type>
				<required>0</required>
				<note>Value by default - 10 seconds</note>
			</connTimeOut>
			<filepartmaxsize>
				<label>Max file size</label>
				<type>text</type>
				<required>0</required>
				<note>File size that the backup will be divided into. Default size is 100 Mb.</note>
				<value>100</value>
			</filepartmaxsize>
		</settings>
	</amazons3>
</application>