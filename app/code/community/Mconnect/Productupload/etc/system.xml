<config>
    <tabs>
        <mconnect_productupload>
            <label>Mconnect Productupload</label>
            <sort_order>195</sort_order>
        </mconnect_productupload>
    </tabs>
    <sections>
          <productupload translate="label" module="productupload">
            <label>Product File Upload</label>
            <tab>mconnect_productupload</tab>
            <frontend_type>text</frontend_type>
            <sort_order>71</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <sort_order>600</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>                        
                        <fileextensions translate="lable">
                            <label>Allowable File Extensions</label>
                            <comment><![CDATA[ Must be comma (',') Separated values like; jpg,gif,pdf etc]]></comment> 
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </fileextensions>                        
                    </fields>
                </general>                
            </groups>
        </productupload>
    </sections>
</config>