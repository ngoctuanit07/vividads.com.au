<?xml version="1.0"?>
<config>
    <tabs>
        <grafischdirect translate="label" module="algemeen">
            <label>Grafisch Direct</label>
            <sort_order>210</sort_order>
        </grafischdirect>
    </tabs>
	<sections>
		<grafischdirectrichsnippets translate="label" module="grafischdirectrichsnippets">
            <label>Google rich snippets</label>
            <tab>grafischdirect</tab>
			<header_css>grafischdirect-header</header_css>
			<frontend_type>text</frontend_type>
			<sort_order>800</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<product translate="label">
					<label>Google Rich Snippets Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<breadcrumb>
							<label>Product Breadcrumbs</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<comment>Send Breadcrums data to Search Engines</comment>	
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>						
						</breadcrumb>
						<sku>
							<label>Product Sku</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<comment>Send Sku attribute data to Search Engines</comment>	
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>						
						</sku>
						<url>
							<label>Product Url</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<comment>Send Url data to Search Engines</comment>	
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>						
						</url>
						<image>
							<label>Product Image</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>	
							<comment>Send Image data to Search Engines</comment>	
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>						
						</image>
						<description>
							<label>Product Short Description</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>	
							<comment>Send Short Description data to Search Engines</comment>	
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>						
						</description>
						<price>
							<label>Product Price</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>	
							<comment>Send Price data to Search Engines</comment>	
							<sort_order>60</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>						
						</price>
						<stock>
							<label>Product Stock</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<comment>Send Stock data to Search Engines (only works when Product Price is active)</comment>	
							<sort_order>70</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>						
						</stock>
						<manufacturer>
							<label>Product Brand</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<comment>Send Manufacturer attribute data to Search Engines</comment>	
							<sort_order>80</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>						
						</manufacturer>
						<color>
							<label>Product Color</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<comment>Send Color attribute data to Search Engines</comment>	
							<sort_order>90</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>						
						</color>
						<weight>
							<label>Product Weight</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<comment>Send Weight attribute data to Search Engines</comment>	
							<sort_order>100</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>						
						</weight>
						<review>
							<label>Product Reviews</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<comment>Send Review data to Search Engine</comment>	
							<sort_order>110</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>						
						</review>
					</fields>
				</product>
			</groups>
		</grafischdirectrichsnippets>
	</sections>
</config>