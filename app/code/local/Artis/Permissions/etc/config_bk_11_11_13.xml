        <layout>
            <updates>
                <permissions>
                    <file>permissions.xml</file>
                </permissions>
            </updates>
        </layout>
    </adminhtml>   
    <global>
        <models>
            <permissions>
                <class>Artis_Permissions_Model</class>
                <resourceModel>permissions_mysql4</resourceModel>
            </permissions>
            <permissions_mysql4>
                <class>Artis_Permissions_Model_Mysql4</class>
                <entities>
                    <permissions>
                        <table>permissions</table>
                    </permissions>
                </entities>
            </permissions_mysql4>
        </models>
        <resources>
            <permissions_setup>
                <setup>
                    <module>Artis_Permissions</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </permissions_setup>
            <permissions_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </permissions_write>
            <permissions_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </permissions_read>
        </resources>
        <blocks>
            <permissions>
                <class>Artis_Permissions_Block</class>
            </permissions>
        </blocks>
        <helpers>
            <permissions>
                <class>Artis_Permissions_Helper</class>
            </permissions>
        </helpers>
    </global>
</config>