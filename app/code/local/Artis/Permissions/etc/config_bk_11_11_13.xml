<?xml version="1.0"?>
<config>
    <modules>
        <Artis_Permissions>
            <version>0.1.0</version>
        </Artis_Permissions>
    </modules>
    <frontend>
        <routers>
            <permissions>
                <use>standard</use>
                <args>
                    <module>Artis_Permissions</module>
                    <frontName>permissions</frontName>
                </args>
            </permissions>
        </routers>
        <layout>
            <updates>
                <permissions>
                    <file>permissions.xml</file>
                </permissions>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <permissions>
                <use>admin</use>
                <args>
                    <module>Artis_Permissions</module>
                    <frontName>permissions</frontName>
                </args>
            </permissions>
            <adminhtml>
                <args>
                    <modules>
                        <Artis_Permissions before="Mage_Adminhtml">Artis_Permissions_Adminhtml</Artis_Permissions>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
