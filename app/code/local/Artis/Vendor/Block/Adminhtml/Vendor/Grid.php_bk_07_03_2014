   function printorder(orderid,itemid,proofid)
    {
       
       
       var xmlhttp;
       if (window.XMLHttpRequest)
	 {// code for IE7+, Firefox, Chrome, Opera, Safari
	 xmlhttp=new XMLHttpRequest();
	 }
       else
	 {// code for IE6, IE5
	 xmlhttp=new ActiveXObject("Microsoft.XMLHTTP");
	 }
       xmlhttp.onreadystatechange=function()
	 {
	 if (xmlhttp.readyState==4 && xmlhttp.status==200)
	   {
	       //document.getElementById("sc_cal_out").innerHTML=xmlhttp.responseText;
	       //alert(xmlhttp.responseText);
	       var data = xmlhttp.responseText.split("@@@");
	       if(data[1] == "yes")
	       {
	       document.getElementById("printid").innerHTML=data[0];
               document.getElementById(\'printid\').style.display = \'block\';
               document.getElementById(\'total_div\').style.display = \'none\';
	       }
		else
		{
		  window.location.href = "'.Mage::helper("adminhtml")->getUrl("adminhtml").'";
		}
	       
	       
	   }
	 }
       form_key = \''.Mage::getSingleton('core/session')->getFormKey().'\';
       xmlhttp.open("POST","'.Mage::getBaseUrl(Mage_Core_Model_Store::URL_TYPE_WEB).'index.php/vendor/adminhtml_vendor/printload/?orderid="+orderid+"&itemid="+itemid+"&proofid="+proofid+"&form_key="+form_key+"&isAjax=true",true);
       xmlhttp.send();
       
   }
   
