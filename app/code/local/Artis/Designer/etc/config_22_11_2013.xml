<?xml version="1.0"?>
<config>
    <modules>
        <Artis_Designer>
            <version>0.1.0</version>
        </Artis_Designer>
    </modules>
     <admin>
            <routers>
                <adminhtml>
                    <args>
                        <modules>
                            <Artis_Designer before="Mage_Adminhtml">Artis_Designer_Adminhtml</Artis_Designer>
                        </modules>
                    </args>
                </adminhtml>
            </routers>
      </admin>
     <frontend>
        <routers>
            <checkout>
                <args>
                    <modules>
                         <Artis_Designer before="Mage_Checkout">Artis_Designer_Checkout</Artis_Designer>
                    </modules>
                </args>
            </checkout>
        </routers>
    </frontend>
    <frontend>
        <routers>
            <designer>
                <use>standard</use>
                <args>
                    <module>Artis_Designer</module>
                    <frontName>designer</frontName>
                </args>
            </designer>
        </routers>
        <layout>
            <updates>
                <designer>
                    <file>designer.xml</file>
                </designer>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<designer>
				<use>admin</use>
				<args>
					<module>Artis_Designer</module>
					<frontName>designer</frontName>
				</args>
			</designer>
        </routers>
    </admin>
    <adminhtml>
		<!--<menu>
			<designer module="designer">
				<title>Designer</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="designer">
						<title>Manage Items</title>
						<sort_order>0</sort_order>
						<action>designer/adminhtml_designer</action>
					</items>
				</children>
			</designer>
		</menu>-->
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Artis_Designer>
							<title>Designer Module</title>
							<sort_order>10</sort_order>
						</Artis_Designer>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<designer>
					<file>designer.xml</file>
				</designer>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <designer>
                <class>Artis_Designer_Model</class>
                <resourceModel>designer_mysql4</resourceModel>
            </designer>
            <designer_mysql4>
                <class>Artis_Designer_Model_Mysql4</class>
                <entities>
                    <designer>
                        <table>designer</table>
                    </designer>
                </entities>
            </designer_mysql4>
        </models>
	<designer>
		<model_save_before>
			<observers>
				<designer_before_save>
					<type>singleton</type>
					<class>designer/observer</class>
					<method>onBeforeSave</method>
				</designer_before_save>
			</observers>
		</model_save_before>
		<model_save_after>
			<observers>
				<designer_after_save>
					<type>singleton</type>
					<class>designer/observer</class>
					<method>onAfterSave</method>
				</designer_after_save>
			</observers>
		</model_save_after>
		<on_create>
			<observers>
				<designer_on_create>
					<type>singleton</type>
					<class>designer/observer</class>
					<method>onCreate</method>
				</designer_on_create>
			</observers>
		</on_create>
		<on_update>
			<observers>
				<designer_on_update>
					<type>singleton</type>
					<class>designer/observer</class>
					<method>onUpdate</method>
				</designer_on_update>
			</observers>
		</on_update>			
	    </designer>
        <resources>
            <designer_setup>
                <setup>
                    <module>Artis_Designer</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </designer_setup>
            <designer_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </designer_write>
            <designer_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </designer_read>
        </resources>
        <blocks>
            <designer>
                <class>Artis_Designer_Block</class>
            </designer>
        </blocks>
        <helpers>
            <designer>
                <class>Artis_Designer_Helper</class>
            </designer>
        </helpers>
    </global>
</config>