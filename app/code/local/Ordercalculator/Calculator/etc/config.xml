<?xml version="1.0"?>
<config>
    <modules>
        <Ordercalculator_Calculator>
            <version>0.1.0</version>
        </Ordercalculator_Calculator>
    </modules>
    <frontend>
        <routers>
            <calculator>
                <use>standard</use>
                <args>
                    <module>Ordercalculator_Calculator</module>
                    <frontName>calculator</frontName>
                </args>
            </calculator>
        </routers>
        <layout>
            <updates>
                <calculator>
                    <file>calculator.xml</file>
                </calculator>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<calculator>
				<use>admin</use>
				<args>
					<module>Ordercalculator_Calculator</module>
					<frontName>calculator</frontName>
				</args>
			</calculator>
        </routers>
    </admin>
