            <calculator_setup>
                <setup>
                    <module>Ordercalculator_Calculator</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </calculator_setup>
            <calculator_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </calculator_write>
            <calculator_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </calculator_read>
        </resources>
        <blocks>
            <calculator>
                <class>Ordercalculator_Calculator_Block</class>
            </calculator>
        </blocks>
