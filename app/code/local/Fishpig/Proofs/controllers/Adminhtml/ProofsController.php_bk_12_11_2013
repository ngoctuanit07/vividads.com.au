        $customer_id =  $order->getCustomerId();
      
        
            foreach($_FILES['item_file']['name'] as $key=>$value)
            {
                if(trim($item[$key]) != '')
                {
                
                    if(isset($_FILES['item_file']['name'][$key]) and (file_exists($_FILES['item_file']['tmp_name'][$key]))) {
                       
                        $file_name=$_FILES['item_file']['name'][$key];
                        
