<config>
    <modules>
        <Artio_MTurbo>
            <version>1.2.7.1</version>
        </Artio_MTurbo>
    </modules>
    <admin>
        <routers>
            <mturbo>
                <use>admin</use>
                <args>
                    <module>Artio_MTurbo</module>
                    <frontName>mturbo</frontName>
                </args>
            </mturbo>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <Artio_MTurbo>
                    <files>
                        <default>Artio_MTurbo.csv</default>
                    </files>
                </Artio_MTurbo>
            </modules>
        </translate>
        <menu>
            <system>
                <children>
                    <mturbo translate="title" module="mturbo">
                        <title>M-Turbo Management</title>
                        <action>mturbo/adminhtml_check</action>
                        <sort_order>91</sort_order>
                    </mturbo>
                </children>
            </system>  
        </menu>  
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <mturbo translate="title" module="mturbo">
                                    <title>M-Turbo Management</title>
                                </mturbo>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>  
        <layout>
            <updates>
                <mturbo>
                    <file>mturbo.xml</file>
                </mturbo>
            </updates>
        </layout>
        <events>
        	<controller_front_send_response_after>
        		<observers>
        			<mturbo>
        				<class>mturbo/observer</class>
        				<method>flush</method>
        			</mturbo>
        		</observers>
        	</controller_front_send_response_after>
            <checkout_type_onepage_save_order_after>
                <observers>
                    <mturbo>
                        <class>mturbo/observer</class>
                        <method>afterSaveOrder</method>
                    </mturbo>
                </observers>
            </checkout_type_onepage_save_order_after>
            <model_save_before>
            	<observers>
            		<mturbo>
            			<class>mturbo/observer</class>
            			<method>beforeSaveAbstract</method>
            		</mturbo>
            	</observers>
            </model_save_before>
            <model_save_after>
                <observers>
                    <mturbo>
                        <class>mturbo/observer</class>
                        <method>afterSaveAbstract</method>
                    </mturbo>
                </observers>
            </model_save_after>
            <admin_session_user_login_success>
                <observers>
                    <mturbo>
                        <class>mturbo/observer</class>
                        <method>adminLogin</method>
                    </mturbo>
                </observers>
            </admin_session_user_login_success>
        </events>
    </adminhtml>
    <frontend>
        <routers>
            <mturbofrontend>
                <use>standard</use>
                <args>
                    <module>Artio_MTurbo</module>
                    <frontName>mturbofrontend</frontName>
                </args>
            </mturbofrontend>
        </routers>
        <layout>
            <updates>
                <mturbo>
                    <file>mturbo.xml</file>
                </mturbo>
            </updates>
        </layout>
        <events>
           <controller_action_predispatch>
                <observers>
                    <mturbo>
                        <class>mturbo/observer</class>
                        <method>cleanQueryParams</method>
                    </mturbo>
                </observers>
            </controller_action_predispatch>
            <customer_login>
                <observers>
                    <mturbo>
                        <class>mturbo/observer</class>
                        <method>customerLogin</method>
                    </mturbo>
                </observers>
            </customer_login>
            <customer_logout>
                <observers>
                    <mturbo>
                        <class>mturbo/observer</class>
                        <method>customerLogout</method>
                    </mturbo>
                </observers>
            </customer_logout>
            <core_block_abstract_prepare_layout_after>
                <observers>
                    <mturbo>
                        <class>mturbo/observer</class>
                        <method>systemCheck</method>
                    </mturbo>
                </observers>
            </core_block_abstract_prepare_layout_after>
            <core_layout_block_create_after>
                <observers>
                    <mturbo>
                        <class>mturbo/observer</class>
                        <method>layoutUpdate</method>
                    </mturbo>
                </observers>
            </core_layout_block_create_after>
            <checkout_type_onepage_save_order_after>
                <observers>
                    <mturbo>
                        <class>mturbo/observer</class>
                        <method>afterSaveOrder</method>
                    </mturbo>
                </observers>
            </checkout_type_onepage_save_order_after>
        </events>
    </frontend>   
    <global>
       <models>
            <mturbo>
                <class>Artio_MTurbo_Model</class>
                <resourceModel>mturbo_mysql4</resourceModel>
            </mturbo>
            <mturbo_mysql4>
                <class>Artio_MTurbo_Model_Mysql4</class>
                <entities>
                    <mturbo>
                        <table>mturbo</table>
                    </mturbo>
                </entities>
            </mturbo_mysql4>
        </models>
        <resources>
            <mturbo_setup>
                <setup>
                    <module>Artio_MTurbo</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </mturbo_setup>
            <mturbo_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </mturbo_write>
            <mturbo_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </mturbo_read>
        </resources>
        <blocks>
            <mturbo>
                <class>Artio_MTurbo_Block</class>
            </mturbo>
        <checkout>
                <rewrite>
                    <cart_item_renderer>Artio_MTurbo_Block_Checkout_Cart_Item_Renderer</cart_item_renderer>
                </rewrite>
            </checkout>
        </blocks>
        <helpers>
            <mturbo>
                <class>Artio_MTurbo_Helper</class>
            </mturbo>
        <catalog>
                 <rewrite>
                    <product_compare>Artio_MTurbo_Helper_Catalog_Product_Compare</product_compare>
                 </rewrite>
             </catalog>
        </helpers>
    </global>
    <crontab>
        <jobs>
            <mturbo_mturbo>
                <run>
                    <model>mturbo/observer::automaticDownload</model>
                </run>
            </mturbo_mturbo>
        </jobs>
    </crontab>
</config>