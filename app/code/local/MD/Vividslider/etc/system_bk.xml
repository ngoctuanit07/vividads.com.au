<config>
    <tabs>
        <MD_Vividslider>            
            <label>Vivid Sliders</label>
            <sort_order>198</sort_order>
        </MD_Vividslider>            
    </tabs>
    <sections>
        <vividslider translate="label" module="vividslider">
            <label>Vivid Slider Settings</label>
            <tab>MD_Vividslider</tab>
            <frontend_type>text</frontend_type>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>               
            <groups>
                <general translate="label">
                    <label>Vivid Slider</label>
                    <sort_order>601</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>                    
                        <vividsliderenabled translate="label">
                            <label>Enable/Disable Vivid Slider Templates</label>                            
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>48</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </vividsliderenabled>               
                        <logotitle translate="label">
                            <label>Quote Email Title</label>                            
                            <frontend_type>text</frontend_type>                                                                
                            <comment>
                <![CDATA[This input will be visible on the frontend the default title is "Emails".]]>
                            </comment>
                            <sort_order>49</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </logotitle>               
                                
                        <vividsliderresizeenabled translate="label">
                            <label>Enable Vivid Slider Resizing</label>                            
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </vividsliderresizeenabled> 
                    
                                                                                               
                    </fields>
                </general>                    
            </groups>
        </vividslider>       
    </sections>
</config>