	public function gettntintlmethodAction(){
		extract($_REQUEST);
		$addressLoadId = Mage::getModel('customer/address')->load($addrsid);
		$destCountry=$addressLoadId['country_id'];
		$postCode=$addressLoadId['postcode'];
		$city = $addressLoadId['city'];
