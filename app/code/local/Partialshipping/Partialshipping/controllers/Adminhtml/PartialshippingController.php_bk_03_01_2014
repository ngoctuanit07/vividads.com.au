		    <DESTTOWNGROUP/>
		    <CONTYPE>N</CONTYPE>
		    <CURRENCY>AUD</CURRENCY>
		    <WEIGHT>'.trim($weight).'</WEIGHT>
		    <VOLUME>'.trim($volume).'</VOLUME>
			<ACCOUNT accountcountry="AU">021664906</ACCOUNT>
