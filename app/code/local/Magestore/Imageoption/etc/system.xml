<?xml version="1.0"?>
<config>
    <tabs>
        <magestore translate="label">
            <label>Magestore Extension</label>
            <sort_order>400</sort_order>
        </magestore>
    </tabs>
    <sections>
        <imageoption translate="label" module="imageoption">
            <class>separator-top</class>
            <label>ImageOption</label>
            <tab>magestore</tab>
            <frontend_type>text</frontend_type>
            <sort_order>299</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General Infomation</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <displaytype translate="label">
                            <label>Display Type</label>
                            <frontend_type>select</frontend_type>
                            <source_model>imageoption/displaytype</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </displaytype>
                    	<quantity translate="label">
                            <label>Enable Image Option Stock Management</label>
                            <frontend_type>select</frontend_type>
                            <source_model>imageoption/usedqty</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </quantity>
					</fields>
                </general>
            </groups>
        </imageoption>
    </sections>
</config>